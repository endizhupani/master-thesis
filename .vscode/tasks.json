{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "type": "shell",
            "label": "make active file",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${fileDirname}/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build active openmp",
            "command": "/usr/bin/g++",
            "args": ["-fopenmp", "-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
